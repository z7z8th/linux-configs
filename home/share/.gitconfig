[color]
	ui = auto
[user]
	email = ybzhao1989@gmail.com
	name = Bob Zhao

[alias]
	co = checkout
	br = branch
	cm = commit
	cmm = commit -m
	cmam = commit -am
	st = status
	sh = show
	di = diff
	ldi = diff HEAD^
	rst = reset
	rb = rebase
	sbm = submodule
	cfg = config
	ft = fetch
	mg = merge
	ps = push
	pl = pull
	rem = remote
	unstage = reset HEAD --
	last = log -1 HEAD
	lgp = log --format='format:%Cgreen%ai %Cred%h %Cgreen%cn  %Creset%s'

[push]
	default = simple
[diff]
	tool = meld
[difftool]
	prompt = yes
[core]
	excludesfile = ~/.global-gitignore
	tabwidth = 4
